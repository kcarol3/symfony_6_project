{% extends 'base.html.twig' %}

{% block title %}Twoje posty{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Wszystkie posty</h1>

        {% for post in posts %}
            <div style="border: 1px solid #000000; border-radius: 4px; padding: 20px; margin-bottom: 10px">
                <h2>{{ post.title }}</h2>
                <p>{{ post.body }}</p>
                <a href="{{ path('app_post_delete', {'id': post.id}) }}" onclick="return confirm('Czy na pewno chcesz usunąć ten element?')">Usuń</a>
            </div>
        {% endfor %}
</div>
{% endblock %}
